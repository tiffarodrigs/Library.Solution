@{
  Layout = "_Layout";
}
<div class="container">
  @await Html.PartialAsync("_Navbar")
  <h1 class="display-4">Author Overview</h1>
  @using Library.Models;
  @if (Model.Count == 0)
      {
            <div class="text-center">
              <p class="lead">There are no Author to display.</p>
              <p>@Html.ActionLink("Add a new Author", "Create", "Authors", null, new { @class="btn btn-primary"})</p>
            </div>
      }
      else
      {  
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Author ID #</th>
            <th scope="col">Name</th>
            <th scope="col">Details</th>
          </tr>
        </thead>
        <tbody>
          @foreach (Author author in Model)
          {
          <tr>
            <th scope="row">@author.AuthorId</th>
            <td>@author.AuthorName</td>
            <td>@Html.ActionLink("Details", "Details", "Authors", new { @id = author.AuthorId}, new { @class = "text-primary"})</td>
          </tr>
          }
        </tbody>
      </table>
      <p>@Html.ActionLink("Add a new Author", "Create", "Authors", null, new { @class="btn btn-primary"})</p>
      }  
  @await Html.PartialAsync("_Footer")
</div>